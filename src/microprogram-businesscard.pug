        },
      },
    })

    const verifyVcard = (() => {
      const schema = joi.object({
        中文職稱: joi.string().trim().empty().required(),
        中文姓名: joi.string().trim().empty().required(),
        英文職稱: joi.string().trim().empty().required(),
        英文姓名: joi.string().trim().empty().required(),
        手機號碼: joi.string().trim().regex(/^\d{10}$/).required(),
        分機: joi.string().trim().regex(/^\d{3}$/).required(),
        電子郵件: joi.string().trim().email({ tlds: false }).empty().required(),
      })
      return value => schema.validateAsync(value, { stripUnknown: true })
    })()

    const vm = new Vue({ // eslint-disable-line
      el: '#app',
      data: {
        csv: 'https://cors-anywhere.herokuapp.com/https://docs.google.com/spreadsheets/d/e/2PACX-1vSGQI88CcLpmk21Dv1Q56oOhhg7_3cVyM6HtPYWXm_ozdM2pZPTIpjy1AHtjSZa9rDbW1yaS74n6nHA/pub?gid=0&single=true&output=csv',
        vcard: null,
      },
      async mounted () {
        try {
          await liff.init({ liffId: '1654437282-n2QwW3Nm' })
          if (!liff.isLoggedIn()) {
            liff.login({ redirectUri: location.href })
            return await new Promise(resolve => {}) // 永遠不會結束的 Promise
          }
          if (!liff.isApiAvailable('shareTargetPicker')) throw new Error('不支援 shareTargetPicker')
          this.vcard = await this.getVcard(this.param('ext'))
        } catch (err) {
          this.handleError(err)
        }
      },
      methods: {
        param (key) {
          const url = new URL(location)
          return url.searchParams.get(key)
        },
        async btnShare () {
          try {
            await liff.shareTargetPicker([renderVcard(this.vcard)])
          } catch (err) {
            this.handleError(err)
          }
        },
        handleError (err) {
          this.page = 'error'
          this.error = errorToJson(err)
          console.error(err)
          Swal.fire({
            icon: 'error',
            title: '發生錯誤',
            text: err.message,
          })
        },
        async getCsv (url) {
          const csv = _.trim(_.get(await axios.get(url, {
            params: { cachebust: _.floor(new Date() / 3e4) },
          }), 'data'))
          return _.get(Papa.parse(csv, {
            encoding: 'utf8',
            header: true,
          }), 'data', [])
        },
        async getVcard (ext) {
          const vcard = await verifyVcard(_.find(await this.getCsv(this.csv), { 分機: ext }))
          return {
            title_tw: vcard['中文職稱'],
            name_tw: vcard['中文姓名'],
            title_en: vcard['英文職稱'],
            name_en: vcard['英文姓名'],
            mobile: vcard['手機號碼'],
            ext: vcard['分機'],
            email: vcard['電子郵件'],
          }
        },
      },
    })