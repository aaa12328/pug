                },
              ],
            },
            {
              height: '1px',
              layout: 'vertical',
              offsetStart: '0px',
              offsetTop: '0px',
              position: 'absolute',
              type: 'box',
              width: '1px',
              contents: [
                {
                  aspectMode: 'cover',
                  aspectRatio: '1:1',
