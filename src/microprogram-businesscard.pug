extends /layouts/default

block beforehtml
  - var title = '微程式 LINE 名片'

block style
  meta(property="og:url", content="https://taichunmin.idv.tw/pug/microprogram-businesscard.html")
  meta(property="og:title", content="微程式 LINE 名片")
  meta(property="og:description", content="請開啟本連結並按一下「選擇分享對象」來透過 LINE 分享名片")
  meta(property="og:image", content="https://i.imgur.com/5zNfhhe.png")
  meta(property="og:image:width", content="600")
  meta(property="og:image:height", content="315")
  meta(property="og:type", content="website")
  meta(property="og:locale", content="zh_TW")
  meta(property="og:site_name", content="筆記國度")
  meta(property="fb:app_id", content="2133031763635285")
  style
    :sass
      [v-cloak]
        display: none

block content
  #app.container.my-4.text-monospace(v-cloak)
    h1.my-3.text-center 微程式 LINE 名片
    #share(v-if="vcard")
      p 請按一下「選擇分享對象」來透過 LINE 分享「{{ vcard.name_tw }}」的名片吧！
      button.btn.btn-lg.btn-success.btn-block(type="button", @click="btnShare") 選擇分享對象
    #loading(v-else)
      p 載入名片資料中，請稍候…

block script
  script(src="https://cdn.jsdelivr.net/npm/@hapi/joi@17/dist/joi-browser.min.js")
  script(src="https://static.line-scdn.net/liff/edge/2/sdk.js")
  script.
    const errorToJson = (() => {
      const ERROR_KEYS = [
        'address',
        'code',
        'data',
        'dest',
        'errno',
        'info',
        'message',
        'name',
        'originalError.response.data',
        'path',
        'port',
        'reason',
        'response.data',
        'response.headers',
        'response.status',
        'stack',
        'status',
        'statusCode',
        'statusMessage',
        'syscall',
      ]
      return err => _.transform(ERROR_KEYS, (json, k) => {
        if (_.hasIn(err, k)) _.set(json, k, _.get(err, k))
      }, {})
    })()
    const h4 = () => _.padStart(_.random(65535).toString(16), 4, '0')
    const gaScreenView = vcard => {
      return `https://www.google-analytics.com/collect?${Qs.stringify({
        an: '微程式 LINE 名片',
        cd: `${vcard.name_tw}-${vcard.mobile}`, // 畫面名稱,
        cid: `${h4()}${h4()}-${h4()}-${h4()}-${h4()}-00${vcard.mobile}`, // uuid
        ds: 'app', // 資料來源，填寫為 app
        t: 'screenview',
        tid: 'UA-39556213-12', // GA 追蹤代碼
        ul: 'zh-tw', // locale
        v: 1, // api version
        z: +new Date(),
      })}`
    }
    const renderVcard = vcard => ({
      altText: `請在手機上查看「${vcard.name_tw}」的名片。`,
      type: 'flex',
      contents: {
        type: 'bubble',
        size: 'giga',
        body: {
          layout: 'horizontal',
          paddingAll: '20px',
          type: 'box',
          contents: [
            {
              flex: 314,
              layout: 'vertical',
              type: 'box',
              contents: [
                {
                  layout: 'vertical',
                  type: 'box',
                  contents: [
                    {
                      aspectMode: 'fit',
                      aspectRatio: '314:100',
                      size: 'full',
                      type: 'image',
                      url: 'https://i.imgur.com/XYWFmRx.png',
                    },
                  ],
                },
                {
                  flex: 1,
                  layout: 'vertical',
                  type: 'box',
                  contents: [
                    {
                      type: 'filler',
                    },
                  ],
                },
                {
                  margin: 'xl',
                  size: 'xxs',
                  text: `${vcard.title_tw}`,
                  type: 'text',
                  wrap: true,
                },
                {
                  size: 'lg',
